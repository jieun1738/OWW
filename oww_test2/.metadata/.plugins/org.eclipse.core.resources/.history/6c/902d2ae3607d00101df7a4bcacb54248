    @GetMapping("/safebox")
    public String safebox(Model model, HttpServletRequest request) {
        System.out.println("ğŸ¦ ì„¸ì´í”„ë°•ìŠ¤ í˜ì´ì§€ í˜¸ì¶œë¨");

