    <script src="/js/auth-buttons.js"></script>

    <script>
        // 잔액 포맷팅 함수
        function formatCurrency(amount) {
            return new Intl.NumberFormat('ko-KR', {
                style: 'currency',
                currency: 'KRW'
            }).format(amount);
        }

        // 페이지 로드 시 잔액 애니메이션
        document.addEventListener('DOMContentLoaded', function() {
            const balanceElements = document.querySelectorAll('.balance');
            
            balanceElements.forEach(element => {
                const targetValue = parseInt(element.textContent.replace(/[^\d]/g, ''));
                let currentValue = 0;
                const increment = targetValue / 50;
                
                const updateBalance = () => {
                    currentValue += increment;
                    if (currentValue < targetValue) {
                        element.textContent = formatCurrency(Math.floor(currentValue));
                        requestAnimationFrame(updateBalance);
                    } else {
                        element.textContent = formatCurrency(targetValue);
                    }
                };
                
                updateBalance();
            });
        });

        // 카드 클릭 시 상세 정보 토글
        document.querySelectorAll('.service-card').forEach(card => {
            card.addEventListener('click', function(e) {
                // 버튼 클릭시에는 카드 클릭 이벤트 방지
                if (e.target.classList.contains('history-btn')) {
                    return;
                }
                
                // 카드 강조 효과
                this.style.transform = 'scale(1.02)';
                setTimeout(() => {
                    this.style.transform = 'scale(1)';
                }, 200);
            });
        });
    </script>
