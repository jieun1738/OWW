        function showDetail(id) {
            const data = historyData[id];
            if (!data) return;

            const detailContent = document.getElementById('detailContent');
            detailContent.innerHTML = `
                <div class="detail-row">
                    <span class="detail-label">번호</span>
                    <span class="detail-value">${data.number}</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">성격</span>
                    <span class="detail-value">${data.type}</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">거래 일시</span>
                    <span class="detail-value">${data.date}</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">적요 및 통장 내용</span>
                    <span class="detail-value">${data.memo}</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">취급점</span>
                    <span class="detail-value">OWW 인터넷뱅킹</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">거래 후 잔액</span>
                    <span class="detail-value amount-large">${data.balance}</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">${data.amountType}</span>
                    <span class="detail-value amount-large">${data.amount}</span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">일반 이체(기타)로 보내기</span>
                    <span class="detail-value"></span>
                </div>
            `;

            // 선택된 행 하이라이트
            const rows = document.querySelectorAll('#historyTableBody tr');
            rows.forEach(row => row.style.backgroundColor = '');
            rows[id-1].style.backgroundColor = '#e6f3ff';
        }

        // 페이지 로드 시 첫 번째 항목 선택
        window.addEventListener('load', () => {
            showDetail(1);
        });
