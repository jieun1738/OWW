// ========================================
// 메인 초기화 스크립트
// ========================================

// DOM이 로드되면 실행
document.addEventListener('DOMContentLoaded', function() {
    // 1. 로그인 상태 확인
    checkLoginStatus();
    
    // 2. Banking 서비스 버튼 이벤트 설정
    setupBankingButtons();
    
    // 3. 기타 초기화 작업
    console.log('Own Wedding Wallet 초기화 완료');
});
// 로그인 성공 후
function onLoginSuccess(user) {
    showUserInfo(user);
    loadUserAccount(); // 추가
    showWelcomeModal(user.name);
}