<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="oww.banking.mapper.AccountMapper">

    <!-- 계좌 ID로 계좌 조회 -->
    <select id="findAccountById" parameterType="int" resultType="oww.banking.vo.AccountVO">
        SELECT 
            account_id as accountId,
            user_email as userEmail,
            account_number as accountNumber,
            balance,
            created_at as createdAt,
            account_password as accountPassword
        FROM account 
        WHERE account_id = #{accountId}
    </select>

    <!-- 이메일로 계좌 조회 -->
    <select id="findAccountByEmail" parameterType="String" resultType="oww.banking.vo.AccountVO">
        SELECT 
            account_id as accountId,
            user_email as userEmail,
            account_number as accountNumber,
            balance,
            created_at as createdAt,
            account_password as accountPassword
        FROM account 
        WHERE user_email = #{userEmail}
    </select>

    <!-- 계좌번호 존재 여부 확인 -->
    <select id="existsByAccountNumber" parameterType="String" resultType="boolean">
        SELECT CASE WHEN COUNT(*) > 0 THEN 1 ELSE 0 END
        FROM account 
        WHERE account_number = #{accountNumber}
    </select>

</mapper>